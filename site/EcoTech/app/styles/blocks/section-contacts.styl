section.contacts
	width 100%
	padding 60px 0
	padding-bottom 46px
	background-color white
	position fixed
	transform translateY(-500px)
	z-index 22
	transition 0.5s all
	visibility hidden
	&.contacts_active
		transform translateY(0px)
		visibility visible
	
	.map
		width 100%
		height 200px
		margin-top 40px
		background-color #eaeaea
	.wrap
		.contacts__wrap-title
			display flex
			justify-content space-between
			h2.section__title
				color #212121
			.contacts__close
				display flex
				align-items center
				cursor pointer
				p.contacts__close__text
					text-transform uppercase
					font-family Black
					color #25282d
					font-size 16px 
					letter-spacing 3px
					margin-left 7px
		.contacts__items
			display flex
			padding-top 30px
			.contacts__item
				display flex
				align-items flex-start
				margin-right 105px
				padding-top 16px
				position relative
				+to-width(1450px)
					margin-right 50px
				&:after
					content ''
					position absolute
					width 40px
					height 6px
					top -2px
					background-color #1567d0
				&:last-child
					margin-right 0
				h3.contacts__title
					color #25282d
					font-size 24px
					font-family Black
					margin-right 40px
					+to-width(1450px)
						margin-right 20px
				p.contacts__text
					font-size 16px
					line-height 1.5
					color #25282d
				a.contacts__link
					color #1567d0
					font-size 16px
					font-family Bold
					white-space nowrap
					margin-top 6px
					&.contacts__mail
						border-bottom 1px solid rgba(21, 103, 208, .2)
						t()
						&:hover
							border-bottom 1px solid rgba(21, 103, 208, .0)