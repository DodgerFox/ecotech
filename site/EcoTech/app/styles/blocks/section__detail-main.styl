section.detail-main
	width 100%
	padding 40px 0
	padding-bottom 60px
	.wrap
		display flex
		align-items center
		+to-width(700px)
			flex-direction column
		.detail-main__left
			padding-right 100px
			+to-width(800px)
				padding-right 60px
			.detail-main__left__item
				margin-top 40px
				&:first-child
					margin-top 0
				h2.detail-main__title
					font-size 24px
					font-family Black
					color #212121
				.detail-main__line
					background-color #1539d0
					width 40px
					height 6px
					margin-top 10px
				p.detail-main__text
					margin-top 20px
					line-height 24px
					font-size 16px
				ul.detail-main__list
					margin-top 20px
					li.detail-main__text
						font-size 16px
						margin-top 10px
						span
							color #1539d0
							font-family Semibold
						a
							color #1539d0
							font-family Semibold						
		.detail-main__right
			width 300px
			.detail-main__right__image
				min-width 300px
				height 300px
				background-position center
				background-size cover
				+to-width(600px)
					min-width 200px
					height 200px
				+to-width(540px)
					width 100%
					height 300px
			p.detail-main__right__text
				font-size 16px
				line-height 24px
				margin-top 20px
			+to-width(700px)
				display flex
				width 100%
				margin-top 50px
				p.detail-main__right__text
					padding-left 20px
					margin-top 0
			+to-width(540px)
				display block
				p.detail-main__right__text
					padding 0
					margin-top 20px
section.detail-picture
	width 100%
	height 600px
	background-color #eaeaea
	background-position center
	background-size cover

section.detail-basic
	padding 60px 0
	width 100%
	.wrap
		display flex
		flex-direction column
		align-items center
		justify-content center
	.detail-basic__line
		width 40px
		height 6px
		background-color #1539d0
	p.detail-basic__text
		margin-top 20px
		width 640px
		line-height 24px
		font-size 16px
		color #212121
		+to-width(740px)
			padding 0 40px
			width 100%
		+to-width(540px)
			padding 0 20px
	.detail-basic__button
		background-color #1539d0
		color white
		margin-top 40px