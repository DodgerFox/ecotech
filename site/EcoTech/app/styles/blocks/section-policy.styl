section.policy
	padding 60px 0
	border-top 1px solid #d8d8d8
	width 100%
	transition 0.5s transform
	.wrap
		.policy__wrap-title
			display flex
			justify-content space-between
			h2.section__title
				color #212121
			.policy__close
				display flex
				align-items center
				cursor pointer
				p.policy__close__text
					text-transform uppercase
					font-family Black
					color #25282d
					font-size 16px 
					letter-spacing 3px
					margin-left 7px
		.policy__wrap
			width 100%
			h4.policy__title
				font-size 24px
				font-family Black
				color #25282d
				margin-top 30px
			p.policy__text
				margin-top 10px
				color #25282d
				font-size 16px
				line-height 1.5
			ul.policy__list
				li.policy__list__item
					margin-top 10px
					margin-left 20px
					position relative
