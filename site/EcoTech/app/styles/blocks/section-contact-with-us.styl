section.contact-with-us
	width 100%
	padding 60px 0
	background-color white
	bottom 0
	transform translateY(0px)
	z-index 22
	transition 0.5s transform
	&.contact-with-us_active
		transform translateY(-287px)
	.wrap
		.contact-with-us__wrap-title
			display flex
			justify-content space-between
			h2.section__title
				color #212121
			.contact-with-us__close
				display flex
				align-items center
				cursor pointer
				p.contact-with-us__close__text
					text-transform uppercase
					font-family Black
					color #25282d
					font-size 16px 
					letter-spacing 3px
					margin-left 7px
				
		form.contact-with-us__form
			margin-top 35px
			display flex
			justify-content space-between
			align-items flex-end
			.contact-with-us__form__item
				position relative
				p.contact-with-us__form__confidential
					font-size 14px
					color #1567d0
					opacity 0.5
					position absolute
					margin-left 18px
					bottom -24px
					border-bottom 1px solid rgba(21, 103, 208, .5)
					t()
					cursor pointer
					&:hover
						opacity 1		
				p.contact-with-us__form__text
					font-size 24px
					font-family Bold
					color #212121
				.contact-with-us__form__input
					margin-top 20px
					min-width 190px
					width 380px	
					border-radius 6px
					background-color #f9f9f9
					border solid 1px #e7e7e7
					height 56px
					padding 0 20px
					color #25282d
					font-size 24px
					t()
					+to-width(1600px)
						width auto
					&.error
						background-color #fff2f2
						border solid 1px #ffafaf
				.contact-with-us__form__button
					width 190px
					height 56px
					border-radius 100px
					background-color #1567d0
					border none
					color white
					font-size 16px
					font-family Bold
				&:first-child
					.contact-with-us__form__input
						max-width 190px
				label.error
					position absolute
					width 100%
					bottom -20px
					white-space nowrap
					left 0
					font-size 14px
					color #d45757
					t()