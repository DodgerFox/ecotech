.is-sticky
	header.header
		background-color #303030

.tags
	display flex
	margin-top 10px
	margin-left -1px
	.tags__tag
		color white
		padding 4px 15px
		font-size 12px
		margin-right 8px
		border-radius 50px
		background-color #7ed321
		&.tags__tag_design
			background-color #7ed321
		&.tags__tag_frontend
			background-color #fee23c
			color black
		&.tags__tag_backend
			background-color #2c9cfc
		&.tags__tag_designing
			background-color #b79d82
		

.simple-button
	width 180px
	font-size 16px
	height 40px
	font-family Bold
	display flex
	justify-content center
	align-items center
	border-radius 50px
		
