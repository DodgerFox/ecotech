body
	position relative
	height 100vh
	min-width 360px
	transition 0.5s all

html
	font-family Regular
	font-weight normal
	font-size 62.5%
	line-height 1.4
	letter-spacing 0
	min-width 320px
	color #2b303b
	margin-left auto
	margin-right auto

	+to-width(1024px)
		min-width 320px

	+to-width(365px)
		overflow-x hidden

section
	font-size 1.6rem

.wrap
	position relative
	width 1240px
	margin-left auto
	margin-right auto

	+to-width(1250px)
		width 960px

	+to-width(992px)
		width 920px
	
	+to-width(960px)
		width 768px
		padding 0 20px

	+to-width(784px)
		width 100%
		padding 0 20px

	+to-width(550px)
		padding 0 20px


.hidden
	display none


section
	.section__title
		color #212121
		font-size 48px
		text-align center
		&.section__title_left
			text-align left
		+to-width(550px)
			font-size 32px
	.section__text
		color #414141
		font-size 16px
		padding-bottom 53px
		font-family Bold

.is-sticky
	header.header
		background-color #303030

.tags
	display flex
	margin-top 10px
	margin-left -1px
	.tags__tag
		color white
		padding 4px 15px
		font-size 12px
		margin-right 8px
		border-radius 50px
		background-color #7ed321

.simple-button
	width 180px
	font-size 16px
	height 40px
	font-family Bold
	display flex
	justify-content center
	align-items center
	border-radius 50px
		
.background-animation
	position fixed
	top 0
	left 0
	width 100%
	bottom 0
	filter unicode('progid:DXImageTransform.Microsoft.Blur(pixelRadius=5)')
	filter blur(3px)
	&:after
		content ''
		width 100%
		height 100%
		position absolute
		left 0
		top 0
		filter blur(5px)
	.background-animation__elem_square
		height 50px
		width 50px
		border-radius 8px
		border 5px solid #6b7df0
		right 25%
		top 25%
		animation swimming 15s infinite ease-in-out
		transform rotate(30deg)
		position absolute
	.background-animation__elem_line
		position absolute
		height 5px
		width 135px
		border-radius 8px
		border 5px solid #e3514f
		left 25%
		top 15%
		animation dancing 25s infinite ease-in-out
		transform rotate(30deg)

@keyframes swimming{
	0%{
				
	}
	25%{
		transform translate(-50px, -100px)
	}
	50%{
	}
	100%{
		transform translate(0, 0)
		transform rotate(1470deg)
	}

}

@keyframes dancing{
	0%{
		
	}
	50%{
		transform translate(70px, 120px)
	}

	100%{
		transform rotate(1830deg)
	}

}